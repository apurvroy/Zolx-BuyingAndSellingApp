                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textSize="@dimen/clickable_text_size"
                    android:padding="@dimen/clickable_padding"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    >
                </Button>
